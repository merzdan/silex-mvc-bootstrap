{% extends "layout.twig" %}
{% block content %}


		     <div class="panel panel-default">
                     <div class="panel-heading">
                         <h3 class="panel-title">{{review.autor}}</h3>
                     </div>
                     <div class="panel-body">
                      {{review.text}}
                      </div>
					  <div class="panel-button">
							<ul class="pager">
                                 	  {% if review.prev_id %}  <li class="previous"><a href="/silex/public/reviewID{{review.prev_id}}"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
										  {% else %}  <li class="previous disabled"><a ><span class="glyphicon glyphicon-chevron-left"></span> </a></li> {% endif %}
									   <li ><span class="glyphicon glyphicon-heart" style="padding:10px;">{{review.likes}}</span></li>
                                       {% if review.next_id %} <li class="next"><a href="/silex/public/reviewID{{review.next_id}}"><span class="glyphicon glyphicon-chevron-right"></span></a></li> 
									  {% else %}  <li class="next disabled"><a><span class="glyphicon glyphicon-chevron-right"></span></a></li>   {% endif %}
                           </ul>
				     </div>
             </div>
		 
{% endblock %}